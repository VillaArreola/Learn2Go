---
import { supabase } from "../lib/supabase";

// Obtener todos los bloques
const { data: blocks } = await supabase
  .from("podcast_blocks")
  .select("id, name, title, description")
  .order("created_at", { ascending: false });
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Learn2Go - Podcasts Educativos</title>
  </head>
  <body class="bg-gray-100 text-gray-900 p-8">
    <h1 class="text-3xl font-bold mb-6">ðŸ“š Lista de Podcasts</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {blocks.map(block => (
        <a
          href={`/bloque/${block.name}`}
          class="block p-4 bg-white rounded shadow hover:shadow-lg transition"
        >
          <h2 class="text-xl font-semibold mb-1">{block.title}</h2>
          <p class="text-gray-600 text-sm">{block.description}</p>
        </a>
      ))}
    </div>
  </body>
</html>
